                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="12dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textSize="20dp"
                        android:text="@string/dp_vendorcpinfo"
                        android:layout_marginTop="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/Black"/>

                    <Spinner
                        android:id="@+id/vendor_dropdown"
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="@string/view_profile_name"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"/>/>

                    <EditText
                        android:text=""
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/vendor_name"
                        android:singleLine="true"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:layout_marginTop="-5dp"
                        android:layout_marginBottom="10dp"
                        android:text="*this field is required"
                        android:textSize="10dp"
                        android:textColor="@color/DangerColor"
                        android:textAlignment="textEnd"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="@string/view_profile_phone"
                        android:textStyle="bold"/>/>
                    <EditText
                        android:text=""
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/vendor_cp"
                        android:singleLine="true"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:layout_marginTop="-5dp"
                        android:layout_marginBottom="10dp"
                        android:text="*this field is required"
                        android:textSize="10dp"
                        android:textColor="@color/DangerColor"
                        android:textAlignment="textEnd"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dp_cargoinfo"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:textColor="@color/Black"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginBottom="4dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/dp_estpick"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="textEnd"
                                android:text="dd-mm-yy"
                                android:layout_marginRight="15dp"
                                android:id="@+id/pick_date"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginBottom="4dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/dp_estdelivered"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="textEnd"
                                android:text="dd-mm-yy"
                                android:layout_marginRight="15dp"
                                android:id="@+id/delivered_date"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginBottom="4dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/dp_estvolume"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="textEnd"
                                android:text=""
                                android:layout_marginRight="15dp"
                                android:id="@+id/volume"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginBottom="4dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/dp_exptrucktype"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="textEnd"
                                android:text=""
                                android:layout_marginRight="15dp"
                                android:id="@+id/expected_truck_type"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="textEnd"
                                android:text=""
                                android:layout_marginRight="15dp"
                                android:id="@+id/strict"
                                android:textColor="@color/DangerColor"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="7dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/dp_cargodetails"
                                android:layout_marginBottom="6dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:inputType="textMultiLine"
                                android:textSize="14dp"
                                android:id="@+id/cargo_info"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="7dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/dp_cargonote"
                                android:layout_marginBottom="6dp"/>
                            <TextView
                                android:layout_marginBottom="60dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:inputType="textMultiLine"
                                android:textSize="14dp"
                                android:id="@+id/cargo_notes"/>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/White"
        android:id="@+id/loading"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true">
            <ProgressBar
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:visibility="visible"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Menolak Job Order..."
                android:id="@+id/loading_process"
                android:textSize="20dp"
                android:textAlignment="center"/>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
